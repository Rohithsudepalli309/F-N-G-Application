# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

# NOTE: Flipper is removed — deprecated in React Native 0.73+.
# Use Safari Web Inspector or Chrome DevTools for debugging.

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'TempProject' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # Flipper disabled — not supported in RN 0.73
    :flipper_configuration => FlipperConfiguration.disabled,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # ─── Firebase ────────────────────────────────────────────────────────────────
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'

  # ─── Google Maps (react-native-maps) ─────────────────────────────────────────
  # Set GOOGLE_MAPS_API_KEY in your GoogleService-Info.plist and AppDelegate.mm
  pod 'GoogleMaps'
  pod 'Google-Maps-iOS-Utils'

  target 'TempProjectTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    # Required by React Native — do not remove
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # ─── Fix Xcode 15 build issues ────────────────────────────────────────────
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)', '_LIBCPP_ENABLE_CXX17_REMOVED_UNARY_BINARY_FUNCTION']
        config.build_settings['SWIFT_VERSION'] = '5.0'
      end
    end
  end
end
