# ── PostgreSQL ─────────────────────────────────────────────────────────────────
POSTGRES_PASSWORD=fng_secret_pw

# Database URL (auto-built from above in docker-compose; override for local dev)
DATABASE_URL=postgresql://fng_user:fng_secret_pw@localhost:5432/fng_db

# ── Auth ────────────────────────────────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
JWT_SECRET=replace_with_at_least_32_char_random_string_here_xxxxxxxxxxxxxxxx
JWT_REFRESH_SECRET=replace_with_different_32_char_random_string_here_xxxxxxxxxx

# ── Razorpay ────────────────────────────────────────────────────────────────────
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ── Firebase (optional) ─────────────────────────────────────────────────────────
FCM_SERVER_KEY=

# ── Admin Dashboard ─────────────────────────────────────────────────────────────
# For Docker: set to your server IP or domain
VITE_API_URL=http://localhost:3000/api/v1
